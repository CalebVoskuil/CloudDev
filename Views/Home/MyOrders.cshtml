@model List<OrderViewModel>

@if (Model != null && Model.Count > 0)
{
    <h2>My Orders</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Product Name</th>
                <th>Price</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.TransactionID</td>
                    <td>@order.ProductName</td>
                    <td>@order.ProductPrice</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
