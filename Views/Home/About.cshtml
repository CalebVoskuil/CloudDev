@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Quicksand, sans-serif;
            background-image: url('/images/swapnil-dwivedi-w46trf64qnc-unsplash.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            
        }

        .background-image {
           
            height: 100vh; /* Adjust the height as needed */
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
            position: relative;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent overlay */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .content {
            z-index: 1; /* Ensure content is above overlay */
            padding: 20px;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2em;
            line-height: 1.5;
            margin-bottom: 20px;
        }

        /* Team section styles */
        .team-section {
            background-color: gba(0, 0, 0, 0.5); /* Light gray background for team section */
            padding: 50px 20px;
            margin-top: 50px;
            text-align: center;
        }

        .team-member {
            display: inline-block;
            margin: 0 20px;
        }

            .team-member img {
                border-radius: 50%;
                width: 150px;
                height: 150px;
                object-fit: cover;
                margin-bottom: 10px;
            }

            .team-member h3 {
                font-size: 1.5em;
                margin-bottom: 5px;
            }

            .team-member p {
                font-size: 1.1em;
                color: #6c757d;
            }

        /* About section styles */
        .about-section {
            background-color: gba(0, 0, 0, 0.5); /* Light semi-transparent background */
            padding: 50px 20px;
            border-radius: 10px;
            text-align: center;
            margin-top: 50px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="background-image">
        <div class="overlay"></div>
        <div class="content">
            <h1>Meet the Team</h1>
            <div class="team-section">
                <div class="team-member">
                    <img src="~/images/download (2).jpg" />
                    <h3>John Doe</h3>
                    <p>CEO</p>
                </div>
                <div class="team-member">
                    <img src="~/images/download (1).jpg" />
                    <h3>Jane Smith</h3>
                    <p>Marketing Director</p>
                </div>
                <div class="team-member">
                    <img src="~/images/images.jpg" />
                    <h3>Michael Johnson</h3>
                    <p>Head of Operations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="about-section">
        <h1>About Us</h1>
        <p>Khumalo is an avid enthusiast of artisanal art, driven by a deep-seated passion for creativity and craftsmanship. With a keen eye for detail and a heart dedicated to supporting local artists, Khumalo endeavors to create a platform that celebrates the beauty of handmade artistry.<br /> 
            His vision extends beyond individual creations; he aims to foster a vibrant community where artists can collaborate, inspire, and thrive collectively.<br />
            Through his unwavering dedication, Khumalo seeks to cultivate an environment where the rich tapestry of artistic expression flourishes, uniting talents and minds to create something truly extraordinary.</p>
    </div>
</body>
</html>

